{
  "name": "rotate",
  "version": "1.0.0",
  "description": "A tool for managing JavaScript projects with multiple packages,  powered by [turborepo](https://github.com/vercel/turborepo), [pnpm](https://github.com/pnpm/pnpm) and [changesets](https://github.com/changesets/changesets).",
  "main": "dist/index.js",
  "bin": {
    "tsup": "dist/index.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "template-*",
    "node_modules"
  ],
  "scripts": {
    "start": "node dist/index.cjs add shelljs typescript --scope a -D",
    "dev": "npm run build-fast -- --watch",
    "build": "tsup src/index.ts  --clean --splitting",
    "build-fast": "npm run build -- --no-dts",
    "prepublishOnly": "npm run build"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WJCHumble/rotate.git"
  },
  "keywords": [
    "monorepo",
    "pnpm",
    "turbo",
    "changesets"
  ],
  "author": "wuliu <wujingchang5@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WJCHumble/rotate/issues"
  },
  "homepage": "https://github.com/WJCHumble/rotate#readme",
  "packageManager": "pnpm@6.29.0",
  "dependencies": {
    "cac": "^6.7.12",
    "enquirer": "^2.3.6",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.16.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.13",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.8.0",
    "jest": "^27.4.7",
    "shelljs": "^0.8.5",
    "ts-jest": "^27.1.3",
    "tslib": "^2.3.1",
    "tsup": "^5.11.13",
    "typescript": "^4.5.5"
  }
}
